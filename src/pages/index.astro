<style lang="scss">
main {
  padding-top: 150px;
  width: 100%;
  max-width: 700px;
  margin: 0 auto;
}
</style>
<script>
  var light_theme = document.getElementById("light_theme");
  light_theme.onclick = function() {
    document.body.classList.remove("dark-theme");
    light_theme.classList.add("checked");
    dark_theme.classList.remove("checked");
  }
  var dark_theme = document.getElementById("dark_theme");
  dark_theme.onclick = function() {
    document.body.classList.add("dark-theme");
    light_theme.classList.remove("checked");
    dark_theme.classList.add("checked");
  }
</script>